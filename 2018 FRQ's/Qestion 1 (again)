public boolean simulate()
{
    int position = 0;
    for(int i=0; i<maxHoops; i++)
    {
        position += hopDistance();

        if(position >= goalDistance)
        {
            return true;
        }
        else if(position<0)
        {
            return false;
        }
    }
    return false;
}
B)

public double runSimulations(int num)
{
    int numTrue =0;
    for(int i=0; i<num; i++)
    {
        if(simulate())
        {
            numTrue++;
        }
        num++;
    }
    return (double) numTrue/num;

}
